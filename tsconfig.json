{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es6", "es2020", "es2017", "esnext", "esnext.asynciterable"],
    "typeRoots": ["./types","./node_modules/@types"],
    "paths": {
      "*": [
        "types/*",
        "src/*",
        "node_modules/@types/*"
      ]
    },
    "types": ["jest", "chai", "node"],
    "outDir": "./dist",
    "baseUrl": ".",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./types/*.d.ts", "./src/**/*.ts","./scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/types"]
}
